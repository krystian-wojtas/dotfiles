#!/bin/bash

# Stop on first failure
set -e

# Show each command
set -x

# Name of internet interface
IFNAME=eth0

# Disable wifi
killall wpa_supplicant || true

# Set interface up and running
ip link set "$IFNAME" up

# Delete all routes
ip route show | cut -f 1 -d' ' | xargs -n 1 ip route delete || true

# Get ip address
killall dhclient || true
dhclient "$IFNAME"
